<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white000"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_gravity="top"
            android:background="@color/RED_FB4E30"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_gravity="bottom"
            android:background="@color/white000"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_imageHead"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y160"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:src="@mipmap/ic_nan"
            app:civ_border_color="#9fff"
            app:civ_border_width="3dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white000"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="2dp"
            android:text="@string/app_name"
            android:textColor="@color/text333"
            android:textSize="@dimen/textSize16"/>

        <include layout="@layout/item_ranking_gold_buy_integrity"/>

        <include layout="@layout/item_age_sex"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_industry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y15"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y15"
        android:padding="1dp"
        android:text="学生"
        android:textColor="@color/text999"
        android:textSize="@dimen/textSize16"
        android:visibility="visible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shape_string"/>
</LinearLayout>