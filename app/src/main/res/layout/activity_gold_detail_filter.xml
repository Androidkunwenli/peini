<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backgroundf1f1f1"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y12"
        android:background="@drawable/shape_string"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@color/white000"
        android:gravity="left|center"
        android:paddingLeft="@dimen/x30"
        android:text="来源"
        android:textColor="@color/text333"
        android:textSize="@dimen/textSize16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180"
        android:background="@color/white000"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type_all"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white000"
                    android:gravity="center"
                    android:text="全部"
                    android:textSize="@dimen/textSize16"/>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="15dp"
                    android:background="@color/view"/>

                <TextView
                    android:id="@+id/tv_type_recharge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white000"
                    android:gravity="center"
                    android:text="充值"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/textSize16"/>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="15dp"
                    android:background="@color/view"/>

                <TextView
                    android:id="@+id/tv_type_gift"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white000"
                    android:gravity="center"
                    android:text="赠送"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/textSize16"/>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="15dp"
                    android:background="@color/view"/>

                <TextView
                    android:id="@+id/tv_type_purchase"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white000"
                    android:gravity="center"
                    android:text="消费"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type_transfer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white000"
                    android:gravity="center"
                    android:text="转账"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/textSize16"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y6"
        android:background="@drawable/shape_string"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@color/white000"
        android:gravity="left|center"
        android:paddingLeft="@dimen/x30"
        android:text="状态"
        android:textColor="@color/text333"
        android:textSize="@dimen/textSize16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white000"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stream_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white000"
                android:gravity="center"
                android:text="全部"
                android:textSize="@dimen/textSize16"/>

            <View
                android:layout_width="0.1dp"
                android:layout_height="15dp"
                android:background="@color/view"/>

            <TextView
                android:id="@+id/tv_stream_income"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white000"
                android:gravity="center"
                android:text="收入"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>

            <View
                android:layout_width="0.1dp"
                android:layout_height="15dp"
                android:background="@color/view"/>

            <TextView
                android:id="@+id/tv_stream_payout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white000"
                android:gravity="center"
                android:text="支出"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@drawable/shape_string"/>

</LinearLayout>