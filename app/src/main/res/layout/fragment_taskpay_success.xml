<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backgroundf1f1f1"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_evaluate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white000"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/data_success"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="付款成功! 参与评价可获得大量积分哦~"
                    android:textColor="@color/RED_FB4E30"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:background="@color/white000"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家点评:   "
                    android:textColor="#333"
                    android:textSize="@dimen/textSize16"/>

                <TextView
                    android:id="@+id/tv_sellername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="#333"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/view"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y300"
                android:background="@color/white000"
                android:orientation="vertical"
                android:paddingLeft="15dp">


                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="服务态度:   "
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <com.example.xlhratingbar_lib.XLHRatingBar xmlns:xlhRatingBar="http://schemas.android.com/apk/res-auto"
                                                               android:id="@+id/ratingBar1"
                                                               android:layout_width="wrap_content"
                                                               android:layout_height="match_parent"
                                                               android:orientation="horizontal"
                                                               xlhRatingBar:canEdit="true"
                                                               xlhRatingBar:countSelected="0"
                                                               xlhRatingBar:dividerWidth="6dp"
                                                               xlhRatingBar:starCount="5"
                                                               xlhRatingBar:stateResId="@drawable/pay_success_appraise"
                                                               xlhRatingBar:widthAndHeight="25dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="店面环境:   "
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <com.example.xlhratingbar_lib.XLHRatingBar xmlns:xlhRatingBar="http://schemas.android.com/apk/res-auto"
                                                               android:id="@+id/ratingBar2"
                                                               android:layout_width="wrap_content"
                                                               android:layout_height="match_parent"
                                                               android:orientation="horizontal"
                                                               xlhRatingBar:canEdit="true"
                                                               xlhRatingBar:countSelected="0"
                                                               xlhRatingBar:dividerWidth="6dp"
                                                               xlhRatingBar:starCount="5"
                                                               xlhRatingBar:stateResId="@drawable/pay_success_appraise"
                                                               xlhRatingBar:widthAndHeight="25dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="餐点品味:   "
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <com.example.xlhratingbar_lib.XLHRatingBar xmlns:xlhRatingBar="http://schemas.android.com/apk/res-auto"
                                                               android:id="@+id/ratingBar3"
                                                               android:layout_width="wrap_content"
                                                               android:layout_height="match_parent"
                                                               android:orientation="horizontal"
                                                               xlhRatingBar:canEdit="true"
                                                               xlhRatingBar:countSelected="0"
                                                               xlhRatingBar:dividerWidth="6dp"
                                                               xlhRatingBar:starCount="5"
                                                               xlhRatingBar:stateResId="@drawable/pay_success_appraise"
                                                               xlhRatingBar:widthAndHeight="25dp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y12"
                android:background="@color/backgroundf1f1f1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"

                android:background="@color/white000"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户点评:   "
                    android:textColor="#333"
                    android:textSize="@dimen/textSize16"/>

                <TextView
                    android:id="@+id/tv_taskname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="#333"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/view"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y300"
                android:background="@color/white000"
                android:orientation="vertical"
                android:paddingLeft="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="生活品味:   "
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <com.example.xlhratingbar_lib.XLHRatingBar xmlns:xlhRatingBar="http://schemas.android.com/apk/res-auto"
                                                               android:id="@+id/ratingBar4"
                                                               android:layout_width="wrap_content"
                                                               android:layout_height="match_parent"
                                                               android:orientation="horizontal"
                                                               xlhRatingBar:canEdit="true"
                                                               xlhRatingBar:countSelected="0"
                                                               xlhRatingBar:dividerWidth="6dp"
                                                               xlhRatingBar:starCount="5"
                                                               xlhRatingBar:stateResId="@drawable/pay_success_appraise"
                                                               xlhRatingBar:widthAndHeight="25dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="形象气质:   "
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <com.example.xlhratingbar_lib.XLHRatingBar xmlns:xlhRatingBar="http://schemas.android.com/apk/res-auto"
                                                               android:id="@+id/ratingBar5"
                                                               android:layout_width="wrap_content"
                                                               android:layout_height="match_parent"
                                                               android:orientation="horizontal"
                                                               xlhRatingBar:canEdit="true"
                                                               xlhRatingBar:countSelected="0"
                                                               xlhRatingBar:dividerWidth="6dp"
                                                               xlhRatingBar:starCount="5"
                                                               xlhRatingBar:stateResId="@drawable/pay_success_appraise"
                                                               xlhRatingBar:widthAndHeight="25dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="交往指数:   "
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <com.example.xlhratingbar_lib.XLHRatingBar xmlns:xlhRatingBar="http://schemas.android.com/apk/res-auto"
                                                               android:id="@+id/ratingBar6"
                                                               android:layout_width="wrap_content"
                                                               android:layout_height="match_parent"
                                                               android:orientation="horizontal"
                                                               xlhRatingBar:canEdit="true"
                                                               xlhRatingBar:countSelected="0"
                                                               xlhRatingBar:dividerWidth="6dp"
                                                               xlhRatingBar:starCount="5"
                                                               xlhRatingBar:stateResId="@drawable/pay_success_appraise"
                                                               xlhRatingBar:widthAndHeight="25dp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@color/white000"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/y40"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/jinbi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x12"
                    android:text="打赏金币"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_no_areward"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:background="@color/white000"
                android:button="@null"
                android:checked="true"
                android:drawableRight="@drawable/checkbox_style_seller"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="无"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:background="@color/white000"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_areward_numbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="自定义金额"
                    android:inputType="number"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:textColor="@color/text333"
                    android:textColorHint="#ccc"
                    android:textSize="@dimen/textSize16"/>

                <CheckBox

                    android:id="@+id/cb_yes_areward"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y100"
                    android:background="@color/white000"
                    android:button="@null"
                    android:checked="false"
                    android:drawableRight="@drawable/checkbox_style_seller"
                    android:paddingLeft="50dp"
                    android:paddingRight="15dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/seller_success"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="@dimen/y60"
                android:background="@drawable/button_red"
                android:text="评价"
                android:textColor="#fff"
                android:textSize="@dimen/textSize17"/>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>

    <ScrollView
        android:id="@+id/sv_areward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y390"
                android:background="@color/backgroundf1f1f1"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/data_success"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="约会还算开心嘛?打赏个小费吧"
                    android:textColor="@color/text333"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_areward"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y100"
                android:background="@drawable/button_red"
                android:gravity="center"
                android:text="我要打赏"
                android:textColor="@color/white000"
                android:textSize="@dimen/textSize16"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>