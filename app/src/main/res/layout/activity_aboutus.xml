<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundf1f1f1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_version_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white000"
                android:drawablePadding="@dimen/y40"
                android:drawableTop="@mipmap/newpeiniicen"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="@dimen/y60"
                android:text="软件版本 : 1.0.0"
                android:textColor="#999"
                android:textSize="@dimen/textSize16"/>

            <TextView
                android:id="@+id/aboutus_e_mail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_white_edge"
                android:drawableRight="@mipmap/backselect"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="官方邮箱"
                android:textColor="#333"
                android:textSize="@dimen/textSize16"/>


            <TextView
                android:id="@+id/aboutus_peini"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_white_edge"
                android:drawableRight="@mipmap/backselect"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="官方网站"
                android:textColor="#333"
                android:textSize="@dimen/textSize16"/>


            <TextView
                android:id="@+id/aboutus_weixin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_white_edge"
                android:drawableRight="@mipmap/backselect"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="官方微信"
                android:textColor="#333"
                android:textSize="@dimen/textSize16"/>

            <TextView
                android:id="@+id/aboutus_call"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_white_edge"
                android:drawableRight="@mipmap/backselect"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="陪你客服"
                android:textColor="#333"
                android:textSize="@dimen/textSize16"/>



            <TextView
                android:id="@+id/aboutus_pingjia"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_white_edge"
                android:drawableRight="@mipmap/backselect"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="去评分"
                android:textColor="#333"
                android:textSize="@dimen/textSize16"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/aboutus_ideas"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:background="@drawable/shape_white_edge"
                android:drawableRight="@mipmap/backselect"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="用户协议"
                android:textColor="#333"
                android:textSize="@dimen/textSize16"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundf1f1f1"
                android:gravity="bottom|center"
                android:orientation="vertical"
                android:paddingTop="@dimen/y50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:text="软件版权:河北金手指商贸有限公司"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize14"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="bottom|center"
                    android:text="Copyright @ 2016-2020 All Reserved"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize14"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
