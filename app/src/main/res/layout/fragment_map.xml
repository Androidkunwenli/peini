<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/map_publish"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y20"
        android:background="@mipmap/home_fb"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map_publish"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/y120"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/map_news"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/y40"
                android:background="@mipmap/home_xx"/>

            <TextView
                android:id="@+id/point_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/peini_yuan"
                android:gravity="center"
                android:maxLength="2"
                android:text="5"
                android:visibility="gone"
                android:textColor="@color/white000"
                android:textSize="@dimen/textSize12"/>
        </FrameLayout>

        <Button
            android:id="@+id/mi_task"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/y40"
            android:background="@mipmap/home_rw"/>

        <Button
            android:id="@+id/map_refresh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/home_fefurbish"/>
    </LinearLayout>


</RelativeLayout>