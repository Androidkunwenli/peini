<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_square_swipe_to_load_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.jsz.peini.widget.ProgressActivity
        android:id="@+id/pa_progress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white000">

        <include layout="@layout/recyclerview"/>
    </com.jsz.peini.widget.ProgressActivity>

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white000"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/huifu_bj"
            android:gravity="center_vertical"
            android:hint="回复"
            android:minHeight="30dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textColor="#333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/textSize15"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/button_red"
            android:minHeight="30dp"
            android:text="发送"
            android:textColor="@color/white000"
            android:textSize="@dimen/textSize16"/>

    </LinearLayout>

</LinearLayout>