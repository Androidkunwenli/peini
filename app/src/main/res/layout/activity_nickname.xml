<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white000"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundf1f1f1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white000"
                android:minHeight="50dp"
                android:textSize="@dimen/textSize14"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <ImageView
                android:id="@+id/delete_nickname"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center"
                android:layout_marginRight="15dp"
                android:background="@mipmap/reset"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_update_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="昵称长度为2~8个汉字,或3~16个字符"
            android:textColor="@color/text999"
            android:textSize="@dimen/textSize12"/>

    </LinearLayout>
</LinearLayout>