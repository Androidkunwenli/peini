<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_popupwindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundf1f1f1"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/task_select_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="确认"
                android:textColor="#333"
                android:textSize="@dimen/textSize15" />

            <Button
                android:id="@+id/task_select_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="取消"
                android:textColor="#333"
                android:textSize="@dimen/textSize15" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white000"
            android:orientation="horizontal">

            <com.wx.wheelview.widget.WheelView
                android:id="@+id/task_wv1"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_weight="1" />

            <com.wx.wheelview.widget.WheelView
                android:id="@+id/task_wv2"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

