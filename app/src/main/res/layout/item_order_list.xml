<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white000"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@drawable/shape_string"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/text999"
            android:textSize="@dimen/textSize16"/>

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingRight="15dp"
            android:textColor="@color/text999"
            android:textSize="@dimen/textSize16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/cf"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="上岛咖啡(天安门店)"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>

            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="到店买单"
                android:textColor="@color/text999"
                android:textSize="@dimen/textSize14"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_order_status_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="3dp"/>

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/RED_FB4E30"
            android:textSize="@dimen/textSize16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>

    <LinearLayout
        android:id="@+id/ll_hangintheair"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_pay_type"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="3dp"
            android:background="@mipmap/weixin"/>

        <TextView
            android:id="@+id/tv_pay_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝消费"
            android:textColor="@color/text333"
            android:textSize="@dimen/textSize16"/>

        <LinearLayout
            android:id="@+id/ll_whethergold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计: ¥"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>

            <TextView
                android:id="@+id/tv_total_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.00"
                android:textColor="@color/text999"
                android:textSize="@dimen/textSize16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 实付: ¥"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>

            <TextView
                android:id="@+id/tv_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingRight="15dp"
                android:text="40.00"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize16"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:paddingRight="15dp"
            android:text="实付¥40.00"
            android:textColor="@color/text333"
            android:textSize="@dimen/textSize16"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>