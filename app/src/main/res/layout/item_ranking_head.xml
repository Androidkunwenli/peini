<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white000"
              android:gravity="center"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageHead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_nan"/>

        <TextView
            android:id="@+id/rowNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@mipmap/myranking"
            android:gravity="center"
            android:textColor="@color/white000"
            android:textSize="@dimen/textSize13"/>
        <!--            android:text="第3280名"-->
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="6"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text333"
            android:textSize="@dimen/textSize16"/>
        <!--            android:text="阿布"
-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@mipmap/nan"/>

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="26"
                android:textColor="#28c7dd"
                android:textSize="@dimen/textSize14"/>
        </LinearLayout>

        <include layout="@layout/item_age_sex"/>

        <TextView
            android:id="@+id/industry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/RED_FB4E30"
            android:padding="1dp"
            android:text="学生"
            android:textColor="@color/white000"
            android:textSize="@dimen/textSize10"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/text999"
        android:textSize="@dimen/textSize13"/>
    <!--&lt;!&ndash;        android:text="拥有 2700 金币- -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@color/backgroundf1f1f1"
        android:gravity="bottom"/>
</LinearLayout>