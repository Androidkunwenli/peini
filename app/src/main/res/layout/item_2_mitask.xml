<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white000"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:gravity="center|left"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageHead"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x10"
            android:src="@mipmap/ic_nan"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y8"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingRight="3dp"
                    android:text=" "
                    android:textColor="@color/text333"
                    android:textSize="@dimen/textSize16"/>

                <include layout="@layout/item_age_sex"/>

                <include
                    layout="@layout/item_ranking_gold_buy_integrity"/>

            </LinearLayout>

            <TextView
                android:id="@+id/industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y8"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=" "
                android:textColor="@color/text999"
                android:textSize="@dimen/textSize14"/>
        </LinearLayout>

        <TextView
            android:id="@+id/publishType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text=" "
            android:textColor="@color/text999"
            android:textSize="@dimen/textSize14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_sellermeassage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/y30"
                    android:src="@mipmap/map"/>

                <TextView
                    android:id="@+id/sellerInfoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text=" "
                    android:textColor="@color/text333"
                    android:textSize="@dimen/textSize14"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    android:paddingLeft="4dp"
                    android:src="@mipmap/sanjiao"/>
            </LinearLayout>

            <TextView
                android:id="@+id/taskAppointedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:drawableLeft="@mipmap/time"
                android:drawablePadding="@dimen/x30"
                android:text="  "
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize14"/>

            <TextView
                android:id="@+id/otherLowAgeotherHighAgeotherSexotherGootherBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:drawableLeft="@mipmap/ilike"
                android:drawablePadding="@dimen/x30"
                android:textColor="@color/text333"
                android:textSize="@dimen/textSize14"/>
            <!--                android:text="18岁-23岁 妹子 我接Ta"
            -->
        </LinearLayout>

        <TextView
            android:id="@+id/taskStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="进行中"
            android:textColor="@color/text999"
            android:textSize="@dimen/textSize14"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_task_taskstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="right|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/otherPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/run_frame_bj"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:text="联系Ta"
            android:textColor="@color/RED_FB4E30"
            android:textSize="@dimen/textSize14"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/otherBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/run_frame_bj"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:text="我买单"
            android:textColor="@color/RED_FB4E30"
            android:textSize="@dimen/textSize14"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/run_frame_bj"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:text="评价"
            android:textColor="@color/RED_FB4E30"
            android:textSize="@dimen/textSize14"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_gotothishouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/run_frame_bj"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:text="还去这家"
            android:textColor="@color/RED_FB4E30"
            android:textSize="@dimen/textSize14"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:id="@+id/v_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@drawable/shape_string"/>
</LinearLayout>