<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white000"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white000"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@mipmap/qiandao"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="62积分"
                    android:textColor="@color/white000"
                    android:textSize="@dimen/textSize16"/>


                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/qiandao_yuan"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/misign"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="签到"
                        android:textColor="@color/RED_FB4E30"
                        android:textSize="@dimen/textSize18"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/continuitySign"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已签到"
                            android:textColor="@color/RED_FB4E30"
                            android:textSize="@dimen/textSize16"/>

                        <View
                            android:layout_width="65dp"
                            android:layout_height="1dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/RED_FB4E30"/>

                        <TextView
                            android:id="@+id/continuitySign_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="连续3天"
                            android:textColor="@color/RED_FB4E30"
                            android:textSize="@dimen/textSize14"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/integralall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <LinearLayout
                        android:orientation="horizontal"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="积分商城"
                            android:textColor="@color/white000"
                            android:textSize="@dimen/textSize16"/>

                        <ImageView
                            android:id="@+id/iv_backselect"
                            android:layout_width="7dp"
                            android:layout_height="14dp"
                            android:src="@mipmap/backselect_color"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/shape_string"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="2月12号"
                android:textColor="@color/text333"
                android:textSize="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/xuxian"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:numColumns="7"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/backgroundf1f1f1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/view"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="签到越多 积分越多"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundf1f1f1"
                android:orientation="vertical">

                <LinearLayout

                    android:orientation="horizontal"
                    android:id="@+id/ll_marks1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/qiandao_item_bj"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/one"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/xuxian_vertical"/>

                    <TextView
                        android:id="@+id/tv_marks1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="连续签到7天可获取连续签到奖包连续签到7天可获取连续签到奖包连续签到7天可获取连续签到奖包连续签到7天可获取连续签到奖包连续签到7天可获取连续签到奖包。"
                        android:textColor="@color/text999"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"

                    android:id="@+id/ll_marks2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/qiandao_item_bj"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/tow"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/xuxian_vertical"/>

                    <TextView
                        android:id="@+id/tv_marks2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="连续签到15天可获取连续签到奖包。"
                        android:textColor="@color/text999"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"

                    android:id="@+id/ll_marks3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/qiandao_item_bj"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/three"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/xuxian_vertical"/>

                    <TextView
                        android:id="@+id/tv_marks3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="连续签到30天可获取连续签到奖包。"
                        android:textColor="@color/text999"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>