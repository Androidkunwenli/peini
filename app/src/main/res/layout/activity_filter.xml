<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_filter"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white000"
              android:orientation="vertical"
              android:paddingBottom="30dp">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white000"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundf1f1f1"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="你希望Ta"
                android:textColor="@color/text999"
                android:textSize="@dimen/textSize16"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:text="排序"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize16"/>


                <RadioGroup
                    android:id="@+id/filter_sort"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="17dp">

                    <RadioButton
                        android:id="@+id/filter_sort_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@drawable/pay_seller_recharge"
                        android:checked="true"
                        android:paddingLeft="5dp"
                        android:text="离我最近"
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <RadioButton
                        android:id="@+id/filter_sort_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:button="@drawable/pay_seller_recharge"
                        android:paddingLeft="5dp"
                        android:text="最近发布"
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:text="性别"
                    android:textColor="#999"
                    android:textSize="@dimen/textSize16"/>

                <RadioGroup
                    android:id="@+id/task_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/task_sex_no"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="40dp"
                        android:button="@drawable/pay_seller_recharge"
                        android:checked="true"
                        android:paddingLeft="5dp"
                        android:text="不限"
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <RadioButton
                        android:id="@+id/task_sex_man"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:button="@drawable/pay_seller_recharge"
                        android:paddingLeft="5dp"
                        android:text="男"
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>

                    <RadioButton
                        android:id="@+id/task_sex_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:button="@drawable/pay_seller_recharge"
                        android:paddingLeft="5dp"
                        android:text="女"
                        android:textColor="#333"
                        android:textSize="@dimen/textSize16"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bg"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="年龄"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <LinearLayout
                        android:id="@+id/filter_age_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/filter_age"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:text="不限"
                            android:textColor="#333"
                            android:textSize="@dimen/textSize16"/>

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/view"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="身高"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <LinearLayout
                        android:id="@+id/filter_height_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/filter_height"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:text="不限"
                            android:textColor="#333"
                            android:textSize="@dimen/textSize16"/>

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/view"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="地区"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <LinearLayout
                        android:id="@+id/filter_address_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/filter_address"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:text="河北石家庄"
                            android:textColor="#333"
                            android:textSize="@dimen/textSize16"/>

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right|center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="视频认证"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"
                        />

                    <CheckBox
                        android:id="@+id/filter_ideoauthentication"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white000"
                        android:button="@null"
                        android:checked="false"
                        android:drawableRight="@drawable/switch_btn"
                        android:gravity="right|center"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/view"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="身份认证"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <CheckBox
                        android:id="@+id/filter_identityauthentication"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white000"
                        android:button="@null"
                        android:checked="false"
                        android:drawableRight="@drawable/switch_btn"
                        android:gravity="right|center"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundf1f1f1"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="类别"
                android:textColor="@color/text999"
                android:textSize="@dimen/textSize16"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/filter_recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
