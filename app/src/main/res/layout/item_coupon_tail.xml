<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundf1f1f1"
    android:gravity="center"
    android:minHeight="100dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_how_to_use_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:text="如何使用优惠券"
        android:textColor="@color/text999"
        android:textSize="@dimen/textSize14" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="12dp"
        android:background="@color/view" />

    <TextView
        android:id="@+id/tv_show_all_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="查看所有优惠券"
        android:textColor="@color/RED_FB4E30"
        android:textSize="@dimen/textSize14" />

</LinearLayout>