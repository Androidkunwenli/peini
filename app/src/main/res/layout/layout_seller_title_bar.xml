<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_seller_title_bar"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/title_bj">

    <ImageView
        android:id="@+id/iv_menu_imagehead_open"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="14dp"
        android:src="@mipmap/san"/>


    <LinearLayout
        android:id="@+id/ll_is_search_activity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/search_bj"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/search"
            android:clickable="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:enabled="false"
            android:gravity="center"
            android:hint="搜索商家、品类、或者商圈"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@color/text333"
            android:textColorHint="@color/text999"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/textSize15"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:padding="6dp"
            android:src="@drawable/icon_clean"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_seller_search_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@mipmap/zxing"/>
    </FrameLayout>
</RelativeLayout>