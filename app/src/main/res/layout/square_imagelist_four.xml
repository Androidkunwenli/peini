<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_ssquare_four"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <!--SquareImageViewOne-->
    <ImageView
        android:id="@+id/iv_square_wutu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/wutu"
        android:visibility="gone"/>

    <com.jsz.peini.widget.squareimage.SquareImageViewOne
        android:id="@+id/iv_square_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:scaleType="centerCrop"
        android:src="@drawable/wutu"/>

    <FrameLayout
        android:id="@+id/fl_canhide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.jsz.peini.widget.squareimage.SquareImageViewThree
            android:id="@+id/iv_square_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:scaleType="centerCrop"
            />

        <com.jsz.peini.widget.squareimage.SquareImageViewThree
            android:id="@+id/iv_square_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            />

        <com.jsz.peini.widget.squareimage.SquareImageViewThree
            android:id="@+id/iv_square_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            />
    </FrameLayout>
</LinearLayout>
