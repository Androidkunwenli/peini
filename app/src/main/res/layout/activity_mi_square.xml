<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:zhy="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white000"
             android:orientation="vertical">

    <com.jsz.peini.widget.ProgressActivity
        android:id="@+id/pa_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jsz.peini.ui.view.square.TranslucentScrollView
            android:id="@+id/sv_mi_square_translucentscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp">

                    <ImageView
                        android:id="@+id/square_bj"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/square_bj"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="70dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|bottom"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/frameLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imageHead"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@mipmap/ic_nan"
                                    app:civ_border_color="#fff"
                                    app:civ_border_width="1dp"/>

                                <ImageView
                                    android:id="@+id/sex"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="bottom|right"
                                    android:layout_marginRight="5dp"
                                    android:src="@mipmap/sqnan"/>
                            </FrameLayout>

                            <LinearLayout
                                android:id="@+id/mi_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/nickname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textColor="@color/white000"
                                    android:textSize="@dimen/textSize16"
                                    android:textStyle="bold"/>
                                <!--android:text="陪你PN"-->

                                <LinearLayout
                                    android:id="@+id/updata_autograph"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/signWord"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textColor="#ebe9e9"
                                        android:textSize="@dimen/textSize12"/>
                                    <!--android:text="美好的一天就要开始了"-->

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginLeft="2dp"
                                        android:background="@mipmap/bianji"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/agenowProvinceTextnowCityText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:textColor="#e2e2e2"
                                    android:textSize="@dimen/textSize12"/>
                                <!--android:text="20岁 - 河北石家庄"-->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/myFans"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:paddingBottom="3dp"
                                        android:paddingTop="3dp"
                                        android:textColor="@color/white000"
                                        android:textSize="@dimen/textSize14"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingBottom="3dp"
                                        android:paddingTop="3dp"
                                        android:text=" | "
                                        android:textColor="@color/white000"
                                        android:textSize="@dimen/textSize14"/>

                                    <TextView
                                        android:id="@+id/myConcern"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:paddingBottom="3dp"
                                        android:paddingTop="3dp"
                                        android:textColor="@color/white000"
                                        android:textSize="@dimen/textSize14"/>
                                </LinearLayout>
                            </LinearLayout>

                            <!--android:text="粉丝2000 | 关注200"-->
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/view"/>

                <LinearLayout
                    android:id="@+id/square_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="账号"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <include layout="@layout/item_show_ranking"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/credittext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <!--android:text="信用值-高"-->

                            <com.jsz.peini.ui.view.TextProgressBar
                                android:id="@+id/credit"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="8dp"
                                android:layout_marginTop="5dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/progressbar_color"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/view"/>

                <LinearLayout
                    android:id="@+id/signStatus"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="签到"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/signStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text333"
                            android:textSize="@dimen/textSize16"/>
                        <!--android:text="签到"-->

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/view"/>
                <!--广场-->
                <LinearLayout
                    android:id="@+id/mi_square"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:minHeight="20dp"
                        android:text="广场"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <!--广场内容-->
                        <TextView
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:minHeight="20dp"
                            android:textColor="#333"
                            android:textSize="@dimen/textSize16"/>

                        <LinearLayout
                            android:id="@+id/square_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <!--广场图片-->
                            <ImageView
                                android:id="@+id/squareLastInfo"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/meinv"
                                android:visibility="gone"/>
                            <!--广场图片-->
                            <ImageView
                                android:id="@+id/squareLastInfo1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/meinv"
                                android:visibility="gone"/>
                            <!--广场图片-->
                            <ImageView
                                android:id="@+id/squareLastInfo2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/meinv"
                                android:visibility="gone"/>
                            <!--广场图片-->
                            <ImageView
                                android:id="@+id/squareLastInfo3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/meinv"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="48dp"

                    android:background="@color/view"/>

                <LinearLayout
                    android:id="@+id/mi_task"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="任务"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <ImageView
                            android:id="@+id/sellerBigType"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp"
                            android:src="@mipmap/white_bj_circular"/>

                        <TextView
                            android:id="@+id/taskName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/text333"
                            android:textSize="@dimen/textSize16"/>

                        <TextView
                            android:id="@+id/taskScoreName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/text333"
                            android:textSize="@dimen/textSize16"/>
                        <!--android:text="达成率3%"-->

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="48dp"

                    android:background="@color/view"/>

                <RelativeLayout
                    android:id="@+id/rl_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="优惠券"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="11dp"
                        android:background="@mipmap/backselect"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="48dp"

                    android:background="@color/view"/>


                <LinearLayout
                    android:id="@+id/selfCount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="资料"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/selfCountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text333"
                            android:textSize="@dimen/textSize16"/>
                        <!--android:text="完整度80%"-->

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="48dp"

                    android:background="@color/view"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="认证"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <LinearLayout
                            android:id="@+id/ll_isIdcard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/isIdcard"
                                android:layout_width="25dp"
                                android:layout_height="18dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="身份认证"
                                android:textColor="@color/text333"
                                android:textSize="@dimen/textSize16"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_isPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/isPhone"
                                android:layout_width="25dp"
                                android:layout_height="18dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="手机认证"
                                android:textColor="@color/text333"
                                android:textSize="@dimen/textSize16"/>
                        </LinearLayout>


                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="48dp"

                    android:background="@color/view"/>

                <LinearLayout
                    android:id="@+id/jinbi_fen_wealth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="财富"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@mipmap/pian"/>

                            <TextView
                                android:id="@+id/gold"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/text333"
                                android:textSize="@dimen/textSize16"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@mipmap/fen"/>

                            <TextView
                                android:id="@+id/score"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/text333"
                                android:textSize="@dimen/textSize16"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/view"/>

                <LinearLayout
                    android:id="@+id/LabelActivity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="标签"
                        android:textColor="#999"
                        android:textSize="@dimen/textSize16"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/lableList"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            zhy:auto_select_effect="true"
                            zhy:max_select="-1"/>

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="1dp"
                            android:background="@mipmap/backselect"/>
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_gravity="center"
