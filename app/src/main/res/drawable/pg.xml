<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp"/>
            <gradient
                android:angle="270"
                android:centerColor="@color/backgroundf1f1f1"
                android:endColor="@color/backgroundf1f1f1"
                android:startColor="@color/backgroundf1f1f1"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <gradient
                    android:centerColor="@color/RED_FB4E30"
                    android:endColor="@color/RED_FB4E30"
                    android:startColor="@color/RED_FB4E30"/>

            </shape>
        </clip>
    </item>

</layer-list>